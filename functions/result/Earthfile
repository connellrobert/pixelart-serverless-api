VERSION 0.6
FROM golang:1.20-bullseye

deps:
    WORKDIR /result
    COPY ../lib+artifact/* /lib/
    COPY go.mod go.sum ./
    RUN go mod download

compile:
    FROM +deps
    COPY ./src ./src
    RUN GOOS=linux GOARCH=amd64 go build -o bin/result ./src
    SAVE ARTIFACT bin

    
update:
    FROM +deps
    RUN go get -u ./...
    SAVE ARTIFACT go.mod AS LOCAL go.mod
    SAVE ARTIFACT go.sum AS LOCAL go.sum